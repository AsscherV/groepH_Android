<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#000000">
    <Button
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="Organised Trips"
            android:id="@+id/btn_MyTrips" android:layout_gravity="center" android:background="#d5d5d5"
            android:layout_marginTop="15dp" android:layout_marginBottom="20dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="29dp"
            android:text="Private trips"
            android:id="@+id/btn_participatingTrips" android:background="#d5d5d5" android:layout_marginBottom="20dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="28dp"
            android:text="Public Trips"
            android:id="@+id/btn_Trips" android:layout_gravity="center" android:background="#d5d5d5"
            android:layout_marginBottom="20dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:text="Profile"
            android:id="@+id/btn_Profile" android:layout_gravity="center" android:background="#d5d5d5"
            android:layout_marginBottom="20dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="26dp"
            android:text="Logout"
            android:id="@+id/btn_Logout" android:layout_gravity="center" android:background="#d5d5d5"
            />
</LinearLayout>